{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string"
    },
    "format": {
      "type": "string"
    },
    "region": {
      "type": "string"
    },
    "resourceType": {
      "type": "string"
    },
    "userConfig": {
      "type": "string",
      "defaultValue": ""
    },
    "utcValue": {
      "type": "string",
      "defaultValue": "[utcNow()]"
    }
  },
  "variables": {
    "environmentName": "[concat('environment-', parameters('utcValue'))]",
    "formatName": "[concat('format-', parameters('utcValue'))]",
    "regionName": "[concat('region-', parameters('utcValue'))]",
    "resourceTypeName": "[concat('resourceType-', parameters('utcValue'))]",
    "userConfigName": "[concat('userConfig-', parameters('utcValue'))]",
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "[variables('environmentName')]",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[parameters('environment')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "[variables('formatName')]",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[parameters('format')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "[variables('regionName')]",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[parameters('region')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "[variables('resourceTypeName')]",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[parameters('resourceType')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "condition": "[not(equals(parameters('userConfig'),''))]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "[variables('userConfigName')]",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[parameters('userConfig')]",
          "contentVersion": "1.0.0.0"
        }
      }
    }
  ],
  "outputs": {
    "environment": {
      "value": "[reference(variables('environmentName')).outputs.environment.value]",
      "type": "object"
    },
    "format": {
      "value": "[reference(variables('formatName')).outputs.format.value]",
      "type": "object"
    },
    "region": {
      "value": "[reference(variables('regionName')).outputs.region.value]",
      "type": "object"
    },
    "resourceType": {
      "value": "[reference(variables('resourceTypeName')).outputs.resourceType.value]",
      "type": "object"
    },
    "userConfig": {
      "value": "[if(not(equals(parameters('userConfig'),'')),reference(variables('userConfigName')).outputs.userConfig.value,createObject())]",
      "type": "object"
    }
  }
}
